<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXHamburger?>
<?import com.jfoenix.controls.JFXProgressBar?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="520.0" prefWidth="730.0" stylesheets="@musicplayer.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.houarizegai.musicplayer.MusicPlayerController">
   <children>
      <VBox prefHeight="550.0" prefWidth="400.0" style="-fx-background-color: #33485d;">
         <children>
            <StackPane prefHeight="45.0" prefWidth="400.0">
               <children>
                  <JFXHamburger fx:id="menu" alignment="CENTER_LEFT" maxWidth="-Infinity" styleClass="hamburger" StackPane.alignment="CENTER_LEFT">
                     <StackPane.margin>
                        <Insets left="10.0" />
                     </StackPane.margin>
                  </JFXHamburger>
                  <HBox maxHeight="-Infinity" maxWidth="-Infinity" spacing="5.0" StackPane.alignment="CENTER_RIGHT">
                     <children>
                        <Label styleClass="btn-min" />
                        <Label styleClass="btn-close" />
                     </children>
                     <StackPane.margin>
                        <Insets right="10.0" />
                     </StackPane.margin>
                  </HBox>
               </children>
            </StackPane>
            <VBox alignment="CENTER" spacing="15.0" VBox.vgrow="ALWAYS">
               <children>
                  <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@images/mp3.png" />
                     </image></ImageView>
                  <Label text="Now Playing : Houari ZEGAI" textFill="WHITE">
                     <font>
                        <Font size="16.0" />
                     </font></Label>
                  <JFXProgressBar prefHeight="5.0" prefWidth="400.0" progress="0.46" />
                  <HBox alignment="CENTER" spacing="45.0">
                     <children>
                        <FontAwesomeIconView fill="WHITE" glyphName="CHEVRON_LEFT" size="28" styleClass="btn-control-music" />
                        <FontAwesomeIconView fill="WHITE" glyphName="PLAY" size="28" styleClass="btn-control-music" />
                        <FontAwesomeIconView fill="WHITE" glyphName="CHEVRON_RIGHT" size="28" styleClass="btn-control-music" />
                     </children>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>
      <VBox layoutX="410.0" prefHeight="300.0" prefWidth="320.0">
         <children>
            <VBox prefHeight="80.0" style="-fx-background-color: #f3970c;">
               <children>
                  <Label styleClass="title-settings" text="Settings Music" />
                  <Label styleClass="title-settings" text="Beauty" />
               </children>
               <padding>
                  <Insets left="10.0" top="10.0" />
               </padding>
            </VBox>
            <VBox prefHeight="220.0" style="-fx-background-color: #33485d;">
               <padding>
                  <Insets left="10.0" top="10.0" />
               </padding>
               <children>
                  <Label styleClass="title-settings" text="Main" />
               </children>
            </VBox>
         </children></VBox>
   </children>
</AnchorPane>
